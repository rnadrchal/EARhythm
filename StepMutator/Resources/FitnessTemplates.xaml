<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:evolution="clr-namespace:StepMutator.Models.Evolution"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                    xmlns:converters="clr-namespace:Egami.Sequencer.UI.Converters;assembly=Egami.Sequencer.UI">

    <converters:BooleanToOpacityConverter x:Key="BooleanToOpacity" />
    <DataTemplate DataType="{x:Type evolution:NoteFitness}">
        <GroupBox Header="Note Fitness">
            <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                <syncfusion:SfRadialSlider Width="120" Height="120" Margin="-12,-18, -12, -12"
                                           Minimum="0" Maximum="1"
                                           Value="{Binding Weight}"
                                           OuterRimRadiusFactor="0.6"
                                           OuterRimStroke="#444"
                                           OuterRimStrokeThickness="3"
                                           InnerRimFill="#666"
                                           InnerRimStroke="#444"
                                           InnerRimRadiusFactor="0.4"
                                           StartAngle="135" EndAngle="405"
                                           TickVisibility="Visible"
                                           TickRadiusFactor="0.6" PointerRadiusFactor="0.5" 
                                           LabelVisibility="Hidden"
                                           FontFamily="Kristen ITC">
                    <TextBlock  FontSize="10">
                        <Run Text="{Binding Weight, Mode=OneWay}" />
                    </TextBlock>
                </syncfusion:SfRadialSlider>
                <TextBlock Text="Weight" HorizontalAlignment="Center" FontSize="10" Margin="0,-5,0,5" />
                <syncfusion:SfRadialSlider Width="120" Height="120" Margin="-12,-18, -12, -12"
                                           Minimum="21" Maximum="108"
                                           Value="{Binding TargetNote}"
                                           OuterRimRadiusFactor="0.6"
                                           OuterRimStroke="#444"
                                           OuterRimStrokeThickness="3"
                                           InnerRimFill="#666"
                                           InnerRimStroke="#444"
                                           InnerRimRadiusFactor="0.4"
                                           StartAngle="135" EndAngle="405"
                                           TickFrequency="16"
                                           TickVisibility="Visible"
                                           TickRadiusFactor="0.6" PointerRadiusFactor="0.5" 
                                           LabelVisibility="Hidden"
                                           FontFamily="Kristen ITC">
                    <TextBlock  FontSize="10">
                        <Run Text="{Binding TargetNote, Mode=OneWay}" />
                    </TextBlock>
                </syncfusion:SfRadialSlider>
                <TextBlock Text="Target Note" HorizontalAlignment="Center" FontSize="10" Margin="0,-5,0,5"></TextBlock>
            </StackPanel>

        </GroupBox>
    </DataTemplate>

    <DataTemplate DataType="{x:Type evolution:VelocityFitness}">
        <GroupBox Header="Velocity Fitness">
            <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                <syncfusion:SfRadialSlider Width="120" Height="120" Margin="-12,-18, -12, -12"
                                           Minimum="0" Maximum="1"
                                           Value="{Binding Weight}"
                                           OuterRimRadiusFactor="0.6"
                                           OuterRimStroke="#444"
                                           OuterRimStrokeThickness="3"
                                           InnerRimFill="#666"
                                           InnerRimStroke="#444"
                                           InnerRimRadiusFactor="0.4"
                                           StartAngle="135" EndAngle="405"
                                           TickVisibility="Visible"
                                           TickRadiusFactor="0.6" PointerRadiusFactor="0.5" 
                                           LabelVisibility="Hidden"
                                           FontFamily="Kristen ITC">
                    <TextBlock  FontSize="10">
                        <Run Text="{Binding Weight, Mode=OneWay}" />
                    </TextBlock>
                </syncfusion:SfRadialSlider>
                <TextBlock Text="Weight" HorizontalAlignment="Center" FontSize="10" Margin="0,-5,0,5" />
                <syncfusion:SfRadialSlider Width="120" Height="120" Margin="-12,-18, -12, -12"
                                           Minimum="0" Maximum="127"
                                           Value="{Binding TargetVelocity}"
                                           OuterRimRadiusFactor="0.6"
                                           OuterRimStroke="#444"
                                           OuterRimStrokeThickness="3"
                                           InnerRimFill="#666"
                                           InnerRimStroke="#444"
                                           InnerRimRadiusFactor="0.4"
                                           StartAngle="135" EndAngle="405"
                                           TickFrequency="16"
                                           TickVisibility="Visible"
                                           TickRadiusFactor="0.6" PointerRadiusFactor="0.5" 
                                           LabelVisibility="Hidden"
                                           FontFamily="Kristen ITC">
                    <TextBlock  FontSize="10">
                        <Run Text="{Binding TargetVelocity, Mode=OneWay}" />
                    </TextBlock>
                </syncfusion:SfRadialSlider>
                <TextBlock Text="Target Velocity" HorizontalAlignment="Center" FontSize="10" Margin="0,-5,0,5"></TextBlock>
            </StackPanel>

        </GroupBox>
    </DataTemplate>

    <DataTemplate DataType="{x:Type evolution:OffFitness}">
        <GroupBox Header="Off Fitness">
            <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                <syncfusion:SfRadialSlider Width="120" Height="120" Margin="-12,-18, -12, -12"
                                           Minimum="0" Maximum="1"
                                           Value="{Binding Weight}"
                                           OuterRimRadiusFactor="0.6"
                                           OuterRimStroke="#444"
                                           OuterRimStrokeThickness="3"
                                           InnerRimFill="#666"
                                           InnerRimStroke="#444"
                                           InnerRimRadiusFactor="0.4"
                                           StartAngle="135" EndAngle="405"
                                           TickVisibility="Visible"
                                           TickRadiusFactor="0.6" PointerRadiusFactor="0.5" 
                                           LabelVisibility="Hidden"
                                           FontFamily="Kristen ITC">
                    <TextBlock  FontSize="10">
                        <Run Text="{Binding Weight, Mode=OneWay}" />
                    </TextBlock>
                </syncfusion:SfRadialSlider>
                <TextBlock Text="Weight" HorizontalAlignment="Center"  FontSize="10" Margin="0,-5,0,10" />
                <Button Style="{StaticResource Round3DButton}" Height="50" Width="50"
                        Command="{Binding ToggleOnOffCommand}">
                    <Ellipse Style="{StaticResource LedEllipseStyle}" Width="14" Height="14"
                             Margin="0,10" Opacity="{Binding FavorOn, Converter={StaticResource BooleanToOpacity}}" />
                </Button>
                <TextBlock Text="Prefer ON" HorizontalAlignment="Center" FontSize="10" Margin="0,5"></TextBlock>
            </StackPanel>
        </GroupBox>
    </DataTemplate>

