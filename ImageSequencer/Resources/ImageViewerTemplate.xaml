<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:ImageSequencer.ViewModels"
                    xmlns:converters="clr-namespace:Egami.Sequencer.UI.Converters;assembly=Egami.Sequencer.UI">
    <converters:NullToVisibilityConverter x:Key="NullToVisibility" />
    <DataTemplate DataType="{x:Type vm:ImageViewer}">
        <Border x:Name="Border" BorderBrush="#444">
            <Grid>
                <Image Source="{Binding ApplicationSettings.Bitmap}" Stretch="{Binding ApplicationSettings.TransformSettings.Stretch}" />
                <TextBlock FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding ApplicationSettings.Bitmap, Converter={StaticResource NullToVisibility}}">
                    <Hyperlink Command="{Binding OpenBitmapCommand}">
                        <Run Text="Click here to open an image."></Run>
                    </Hyperlink>
                </TextBlock>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>