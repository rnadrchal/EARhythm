<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:ImageSequencer.ViewModels"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:behaviors="clr-namespace:ImageSequencer.Behaviors"
                    xmlns:converters="clr-namespace:Egami.Sequencer.UI.Converters;assembly=Egami.Sequencer.UI">
    <converters:NullToVisibilityConverter x:Key="NullToVisibility" />
    <DataTemplate DataType="{x:Type vm:ImageViewer}">
        <Border x:Name="Border" BorderBrush="#444" BorderThickness="1"
                AllowDrop="True" Background="#111">
            <i:Interaction.Behaviors>
                <behaviors:DropBehavior DropCommand="{Binding DropCommand}" />
                <behaviors:DragOverHighlightBehavior HighlightBrush="Orange" />
            </i:Interaction.Behaviors>
            <Grid>
                <Image Source="{Binding Bitmap}" Stretch="Uniform" />
                <TextBlock FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding Bitmap, Converter={StaticResource NullToVisibility}}">
                    <Hyperlink Command="{Binding OpenBitmapCommand}">
                        <Run Text="Click here to open an image."></Run>
                    </Hyperlink>
                </TextBlock>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>