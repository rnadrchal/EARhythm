<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpf="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF">
    <Style TargetType="TextBlock" x:Key="ControlLabelStyle">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style TargetType="TextBlock" x:Key="HeaderTextStyle">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style TargetType="TextBlock" x:Key="RegionHeaderStyle">
        <Setter Property="Foreground" Value="Orange" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style TargetType="TextBlock" x:Key="DigitalText">
        <Setter Property="FontFamily" Value="{DynamicResource LED_Real}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="OrangeRed" />
        <Setter Property="Background" Value="#400"></Setter>
    </Style>
    <Style TargetType="{x:Type wpf:MaterialIcon}" x:Key="ButtonIcon">
        <Setter Property="Height" Value="24" />
        <Setter Property="Opacity" Value="0.6" />
    </Style>

</ResourceDictionary>