<prism:PrismApplication x:Class="ImageSequencer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ImageSequencer"
             xmlns:prism="http://prismlibrary.com/" >
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="LED_Real">
                Resources/Fonts/#LED Real
            </FontFamily>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Egami.Sequencer.UI;component/Resources/Styles.xaml" />
                <ResourceDictionary Source="Resources/CommonStyles.xaml" />
                <ResourceDictionary Source="Resources/ImageViewerTemplate.xaml" />
                <ResourceDictionary Source="Resources/VisitViewerTemplate.xaml" />
                <ResourceDictionary Source="Resources/ApplicationSettingsTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
