<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:players="clr-namespace:TextSequencer.ViewModels.Players">

    <!-- Header-Text style -->
    <Style x:Key="GroupBoxHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="LightGreen"/>
        <Setter Property="Margin" Value="6,0,6,6"/>
    </Style>

    <Style x:Key="PropertyLabelStyle" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="Foreground" Value="Gray" />

    </Style>

    <Style TargetType="{x:Type GroupBox}" x:Key="PlayerGroupBox">
        <!--<Setter Property="Background" Value="#222"/>-->
        <Setter Property="BorderBrush" Value="#444"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="3"/>
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Style="{StaticResource GroupBoxHeaderTextStyle}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Border 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="0"
                        Padding="{TemplateBinding Padding}">
                        <DockPanel>
                            <!-- Header an oberster Position -->
                            <ContentPresenter
                                ContentSource="Header"
                                RecognizesAccessKey="True"
                                DockPanel.Dock="Top"
                                Margin="3,3,3,3"/>
                            <!-- Content -->
                            <ContentPresenter/>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBlock" x:Key="SequenceHeaderStyle">
        <Setter Property="FontWeight" Value="Bold"  />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="Foreground" Value="Gray" />
    </Style>

    <Style TargetType="TextBlock" x:Key="SequenceContentStyle">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <DataTemplate DataType="{x:Type players:BassPlayer}">
        <GroupBox Header="{Binding Title}" Style="{StaticResource PlayerGroupBox}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Sequence" Style="{StaticResource SequenceHeaderStyle}" />

                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource SequenceContentStyle}">
                    The Sequence is based on the pitch class median
                    <Span FontStyle="Italic">Med(i
                        <Run Text="Π" BaselineAlignment="Subscript" FontSize="8" /> )
                    </Span>
                    <Run Text="{Binding Note, Mode=OneWay}" FontWeight="Bold" Foreground="Red" /> ,
                    which is played for
                    <Run Text="{Binding Bars, Mode=OneWay}" FontWeight="Bold" Foreground="Red" /> bars.
                </TextBlock>

                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Pitch Modulation" 
                           Style="{StaticResource SequenceHeaderStyle}"/>

                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource SequenceContentStyle}">
                    Pitches are modulated based deviation from the median character index Med(i), resulting in the following values:
                    <Run Text="{Binding CharIndexDeviations, Mode=OneWay}"></Run>
                </TextBlock>

                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0" 
                               Style="{StaticResource PropertyLabelStyle}">
                        <Run Text="Max. Cents:" />
                        <Run Text="{Binding MaxCents, Mode=OneWay, StringFormat=N2}" Foreground="White" />
                    </TextBlock>
                    <Slider Grid.Row="1" Grid.Column="0" Minimum="0" Maximum="100" Value="{Binding MaxCents}"
                            Margin="3"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Division"
                               Style="{StaticResource PropertyLabelStyle}" />
                    <ComboBox Grid.Row="1" Grid.Column="1" SelectedItem="{Binding LfoDivision}"
                              ItemsSource="{Binding  AvailableDivisions}" Margin="3">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding }"
                                           FontFamily="Book Antiqua"></TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Waveform"
                               Style="{StaticResource PropertyLabelStyle}"/>
                    <ComboBox Grid.Row="1" Grid.Column="2" SelectedItem="{Binding LfoWaveform}"
                              ItemsSource="{Binding  AvailableWaveforms}"
                              Margin="3">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding }"
                                           FontFamily="Book Antiqua"></TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Grid.Row="0" Grid.Column="3" Style="{StaticResource PropertyLabelStyle}">
                        <Run Text="PW:" />
                        <Run Text="{Binding PulseWidth, Mode=OneWay, StringFormat=N2}"
                             Foreground="White"/>
                    </TextBlock>
                    <Slider Grid.Row="1" Grid.Column="3" Minimum="0" Maximum="1" Value="{Binding PulseWidth}"
                            Margin="3" />

                    <TextBlock Grid.Row="0" Grid.Column="4" Style="{StaticResource PropertyLabelStyle}">
                        <Run Text="Phase:" />
                        <Run Text="{Binding Phase, Mode=OneWay, StringFormat=N2}"
                             Foreground="White"/>
                    </TextBlock>
                    <Slider Grid.Row="1" Grid.Column="4" Minimum="0" Maximum="1" Value="{Binding Phase}"
                            Margin="3" />
                </Grid>
            </Grid>
        </GroupBox>
    </DataTemplate>
</ResourceDictionary>