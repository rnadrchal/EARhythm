<UserControl x:Class="ChemSequencer.Views.MoleculeSelectionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChemSequencer.Views"
             xmlns:wpf="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:syncfusionConverters="clr-namespace:Syncfusion.Windows.Converters;assembly=Syncfusion.SfInput.Wpf"
             xmlns:viewModels="clr-namespace:ChemSequencer.ViewModels"
             syncfusion:SfSkinManager.Theme="{syncfusion:SkinManagerExtension ThemeName=FluentDark}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             MinWidth="400" MinHeight="500"
             MaxWidth="400" MaxHeight="500"
             Width="Auto" Height="Auto"
             Background="#222">
    <Grid Margin="5">
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
            <syncfusionConverters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibility" />
            <viewModels:ByteArrayToCroppedImageConverter x:Key="ArrayToCroppedImage" />
            <Style TargetType="TextBlock" x:Key="LabelStyle">
                <Setter Property="Foreground" Value="#888" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Molecule Name" VerticalAlignment="Center"
                   Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}"
                 Margin="5,0" AcceptsReturn="False">
            <TextBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
            </TextBox.InputBindings>
        </TextBox>
        <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource Round3DButton}"
                Width="24" Height="24" Command="{Binding SearchCommand}">
            <wpf:MaterialIcon Kind="Search" Width="16" Opacity="0.5" />
        </Button>
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" x:Name="ModuleInfo" Visibility="{Binding Error, Converter={StaticResource InverseBooleanToVisibility}}"
              Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="{Binding Message}" Foreground="White" HorizontalAlignment="Center" />
            <Image Grid.Row="1"
                   Margin="10"
                   Source="{Binding Molecule.DepictionPng}"
                   Stretch="Uniform"/>
        </Grid>

        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                   Visibility="{Binding Error, Converter={StaticResource BooleanToVisibility}}"
                   Text="{Binding Message}" 
                   FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>


        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" 
                    Margin="10"
                    Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource Round3DButton}" Command="{Binding AcceptCommand}" CommandParameter="true"
                    Width="24" Height="24" Margin="0,0,5,0"
                    Background="DarkRed">
                <wpf:MaterialIcon Kind="Check" Width="16"></wpf:MaterialIcon>
            </Button>
            <Button Style="{StaticResource Round3DButton}" Command="{Binding CancelCommand}" CommandParameter="true"
                    Width="24" Height="24">
                <wpf:MaterialIcon Kind="Cancel" Width="16" Opacity="0.5" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
