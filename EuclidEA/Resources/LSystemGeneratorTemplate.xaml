<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:EuclidEA.ViewModels"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                    xmlns:converters="clr-namespace:EuclidEA.Converters"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <converters:AddConverter x:Key="Add" />

    <DataTemplate DataType="{x:Type sys:Int32}" x:Key="RuleIndexTemplate">
        <TextBlock Text="{Binding Converter={StaticResource Add}, ConverterParameter=1}"></TextBlock>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:LSystemViewModel}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Steps" Style="{StaticResource LabelStyle}" />
            <syncfusion:SfRadialSlider Width="120" Height="120"
                                       Minimum="0" Maximum="64"
                                       Value="{Binding Steps}"
                                       OuterRimRadiusFactor="0.6"
                                       OuterRimStroke="#444"
                                       OuterRimStrokeThickness="3"
                                       InnerRimFill="#666"
                                       InnerRimStroke="#444"
                                       InnerRimRadiusFactor="0.4"
                                       StartAngle="135" EndAngle="405"
                                       TickFrequency="8"
                                       TickVisibility="Visible"
                                       TickRadiusFactor="0.6" PointerRadiusFactor="0.5" LabelRadiusFactor="0.8"
                                       FontFamily="Kristen ITC">
                <TextBlock Text="{Binding Steps}" FontSize="16"></TextBlock>
            </syncfusion:SfRadialSlider>
            <TextBlock Text="Steps" Style="{StaticResource LabelStyle}" />
            <syncfusion:SfRadialSlider Width="120" Height="120"
                                       Minimum="0" Maximum="{Binding NumberOfRules, Converter={StaticResource Add}, ConverterParameter=-1}"
                                       Value="{Binding RuleIndex}"
                                       OuterRimRadiusFactor="0.6"
                                       OuterRimStroke="#444"
                                       OuterRimStrokeThickness="3"
                                       InnerRimFill="#666"
                                       InnerRimStroke="#444"
                                       InnerRimRadiusFactor="0.4"
                                       StartAngle="135" EndAngle="405"
                                       TickFrequency="1"
                                       TickVisibility="Visible"
                                       TickRadiusFactor="0.6" PointerRadiusFactor="0.5" LabelRadiusFactor="0.8"
                                       FontFamily="Kristen ITC">
                <TextBlock Text="{Binding RuleIndex}" FontSize="16" />
            </syncfusion:SfRadialSlider>
            <TextBlock Text="Hit Symbol" Style="{StaticResource LabelStyle}" />
            <syncfusion:SfRadialSlider Width="120" Height="120"
                                       Minimum="0" Maximum="{Binding RuleCharacters.Length, ConverterParameter=-1, Converter={StaticResource Add}}"
                                       Value="{Binding HitSymbolIndex}"
                                       OuterRimRadiusFactor="0.6"
                                       OuterRimStroke="#444"
                                       OuterRimStrokeThickness="3"
                                       InnerRimFill="#666"
                                       InnerRimStroke="#444"
                                       InnerRimRadiusFactor="0.4"
                                       StartAngle="135" EndAngle="405"
                                       TickFrequency="1"
                                       TickVisibility="Visible"
                                       TickRadiusFactor="0.6" PointerRadiusFactor="0.5" LabelRadiusFactor="0.4"
                                       FontFamily="Kristen ITC"
                                       LabelVisibility="Collapsed"
                                       Margin="0,-16">
                <TextBlock Text="{Binding HitSymbol}" FontSize="16" />
            </syncfusion:SfRadialSlider>
            <TextBlock Text="Iterations" Style="{StaticResource LabelStyle}" />
            <syncfusion:SfRadialSlider Width="120" Height="120"
                                       Minimum="0" Maximum="25"
                                       Value="{Binding Iterations}"
                                       OuterRimRadiusFactor="0.6"
                                       OuterRimStroke="#444"
                                       OuterRimStrokeThickness="3"
                                       InnerRimFill="#666"
                                       InnerRimStroke="#444"
                                       InnerRimRadiusFactor="0.4"
                                       StartAngle="135" EndAngle="405"
                                       TickFrequency="5"
                                       TickVisibility="Visible"
                                       TickRadiusFactor="0.6" PointerRadiusFactor="0.5" LabelRadiusFactor="0.8"
                                       FontFamily="Kristen ITC">
                <TextBlock Text="{Binding Iterations}" FontSize="16" />
            </syncfusion:SfRadialSlider>

        </StackPanel>
    </DataTemplate>
</ResourceDictionary>