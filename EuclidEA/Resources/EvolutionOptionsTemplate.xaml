<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:model="clr-namespace:EuclidEA.Models"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                    xmlns:converters="clr-namespace:EuclidEA.Converters">

    <converters:MultConverter x:Key="Mult" />

    <DataTemplate DataType="{x:Type model:EvolutionOptions}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <syncfusion:SfRadialSlider Grid.Row="2" Grid.Column="0" Width="80" Height="80"
                                       Margin="0,-6"
                                       Minimum="0" Maximum="100"
                                       Value="{Binding SwapRate, ConverterParameter=100, Converter={StaticResource Mult}}"
                                       OuterRimRadiusFactor="0.6"
                                       OuterRimStroke="#444"
                                       OuterRimStrokeThickness="3"
                                       InnerRimFill="#666"
                                       InnerRimStroke="#444"
                                       InnerRimRadiusFactor="0.4"
                                       StartAngle="135" EndAngle="405"
                                       TickVisibility="Visible"
                                       TickRadiusFactor="0.6" PointerRadiusFactor="0.5" 
                                       LabelVisibility="Hidden"
                                       FontFamily="Kristen ITC"
                                       ToolTip="Maximum Circular Shift">
                <TextBlock Text="{Binding SwapRate, ConverterParameter=100, Converter={StaticResource Mult}, StringFormat=F1}" FontSize="10" />
            </syncfusion:SfRadialSlider>
            <TextBlock Grid.Column="0" Grid.Row="3" Text="R_Swap" FontSize="10" HorizontalAlignment="Center" />

            <TextBlock Grid.Column="1" Grid.Row="0" Text="R_Del" FontSize="10" HorizontalAlignment="Center" />
            <syncfusion:SfRadialSlider Grid.Row="1" Grid.Column="1" Width="80" Height="80"
                                       Margin="0,-6"
                                       Minimum="0" Maximum="100"
                                       Value="{Binding DeletionRate, ConverterParameter=100, Converter={StaticResource Mult}}"
                                       OuterRimRadiusFactor="0.6"
                                       OuterRimStroke="#444"
                                       OuterRimStrokeThickness="3"
                                       InnerRimFill="#666"
                                       InnerRimStroke="#444"
                                       InnerRimRadiusFactor="0.4"
                                       StartAngle="135" EndAngle="405"
                                       TickVisibility="Visible"
                                       TickRadiusFactor="0.6" PointerRadiusFactor="0.5" 
                                       LabelVisibility="Hidden"
                                       FontFamily="Kristen ITC"
                                       ToolTip="Maximum Circular Shift">
                <TextBlock Text="{Binding DeletionRate, ConverterParameter=100, Converter={StaticResource Mult}, StringFormat=F1}" FontSize="10" />
            </syncfusion:SfRadialSlider>
            <syncfusion:SfRadialSlider Grid.Row="2" Grid.Column="1" Width="80" Height="80"
                                       Margin="0,-6"
                                       Minimum="0" Maximum="100"
                                       Value="{Binding InsertionRate, ConverterParameter=100, Converter={StaticResource Mult}}"
                                       OuterRimRadiusFactor="0.6"
                                       OuterRimStroke="#444"
                                       OuterRimStrokeThickness="3"
                                       InnerRimFill="#666"
                                       InnerRimStroke="#444"
                                       InnerRimRadiusFactor="0.4"
                                       StartAngle="135" EndAngle="405"
                                       TickVisibility="Visible"
                                       TickRadiusFactor="0.6" PointerRadiusFactor="0.5" 
                                       LabelVisibility="Hidden"
                                       FontFamily="Kristen ITC"
                                       ToolTip="Maximum Circular Shift">
                <TextBlock Text="{Binding InsertionRate, ConverterParameter=100, Converter={StaticResource Mult}, StringFormat=F1}" FontSize="10" />
            </syncfusion:SfRadialSlider>
            <TextBlock Grid.Column="1" Grid.Row="3" Text="R_Ins" FontSize="10" HorizontalAlignment="Center" />

            <TextBlock Grid.Column="2" Grid.Row="0" Text="Max Len" FontSize="10" HorizontalAlignment="Center" />
            <syncfusion:SfRadialSlider Grid.Row="1" Grid.Column="2" Width="80" Height="80"
                                       Margin="0,-6"
                                       Minimum="1" Maximum="8"
                                       Value="{Binding MaxStepLength}"
                                       OuterRimRadiusFactor="0.6"
                                       OuterRimStroke="#444"
                                       OuterRimStrokeThickness="3"
                                       InnerRimFill="#666"
                                       InnerRimStroke="#444"
                                       InnerRimRadiusFactor="0.4"
                                       StartAngle="135" EndAngle="405"
                                       TickFrequency="1"
                                       TickVisibility="Visible"
                                       TickRadiusFactor="0.6" PointerRadiusFactor="0.5" 
                                       LabelVisibility="Hidden"
                                       FontFamily="Kristen ITC"
                                       ToolTip="Maximum Circular Shift">
                <TextBlock Text="{Binding MaxStepLength}" FontSize="10" />
            </syncfusion:SfRadialSlider>
            <syncfusion:SfRadialSlider Grid.Row="2" Grid.Column="2" Width="80" Height="80"
                                       Margin="0,-6"
                                       Minimum="0" Maximum="100"
                                       Value="{Binding CrossoverRate, ConverterParameter=100, Converter={StaticResource Mult}}"
                                       OuterRimRadiusFactor="0.6"
                                       OuterRimStroke="#444"
                                       OuterRimStrokeThickness="3"
                                       InnerRimFill="#666"
                                       InnerRimStroke="#444"
                                       InnerRimRadiusFactor="0.4"
                                       StartAngle="135" EndAngle="405"
                                       TickVisibility="Visible"
                                       TickRadiusFactor="0.6" PointerRadiusFactor="0.5" 
                                       LabelVisibility="Hidden"
                                       FontFamily="Kristen ITC"
                                       ToolTip="Maximum Circular Shift">
                <TextBlock Text="{Binding CrossoverRate, ConverterParameter=100, Converter={StaticResource Mult}, StringFormat=F1}" FontSize="10" />
            </syncfusion:SfRadialSlider>
            <TextBlock Grid.Column="2" Grid.Row="3" Text="R_CO" FontSize="10" HorizontalAlignment="Center" Foreground="OrangeRed" />

        </Grid>
    </DataTemplate>
</ResourceDictionary>